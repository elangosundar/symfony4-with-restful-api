<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Welcome to User Management Sytems</title>
        {% block head_css %}
            <!-- Copy CSS from https://getbootstrap.com/docs/4.0/getting-started/introduction/#css -->
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}

        {% block head_js %}
            <!-- Copy JavaScript from https://getbootstrap.com/docs/4.0/getting-started/introduction/#js -->
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}      
    </head>
    <body>
        <div class="main">
            <div id="sidebar">
                <h1>User Management Sytems</h1>
                {% block sidebar %}
                    <nav>
                        <ul>
                            <li><a href="/">Home</a></li> |
                            <li><a href="/Rest/Users/getUser">getUser</a></li> |
                            <li><a href="/Rest/Users/">getAllUsers</a></li> |
                            <li><a href="/Rest/Users/newUser">New</a></li> |
                            <li><a href="/">Edit</a></li>
                        </ul>
                    </nav>
                {% endblock %}
            </div>

            <div id="content">
                {% block body %}
                    <table class="table table-striped table-bordered table-sm">
                        <thead>
                            <tr>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Email</th>
                                <th>MobileNumber</th>
                                <th>Education</th>
                                <th>DOB</th>
                                <th>BloodGroup</th>
                                <th>Gender</th>
                                <th>Blood Group</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in userlist %}
                            <tr>
                                <td>{{ user.userFirstName }}</td>
                                <td>{{ user.userLastName }}</td>
                                <td>
                                    {% for usrEmail in user.userEmail %}
                                        <p>{{ usrEmail }} </p>
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for usrMob in user.userMobileNumber %}
                                        <p>{{ usrMob }} </p>
                                    {% endfor %}
                                </td>
                                <td>
                                    <!-- {{dump(user.userEducation)}} -->
                                    {% for usrEdu in user.userEducation %}
                                        <!--  {{dump(usrEdu)}} -->
                                        {% if usrEdu %}
                                            <!-- handle array -->
                                            {% for edu in usrEdu %}
                                                <p>{{ edu }}</p>
                                            {% endfor %}
                                        {% else %}
                                            <!-- handle non-array -->
                                            {{ usrEdu }}
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>{{ user.userDateofBirth }}</td>
                                <td>{{ user.userBloodGroup }}</td>
                                <td>{{ user.userGender }}</td>
                                <td>{{ user.userBloodGroup }}</td>
                            </tr> 
                        {% endfor %}
                        </tbody>
                    </table>
                {% endblock %}
            </div>
        </div>
    </body>
</html>
